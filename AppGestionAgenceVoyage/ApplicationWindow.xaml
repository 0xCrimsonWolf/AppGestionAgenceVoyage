                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#f58735" Offset="0"/>
                    <GradientStop Color="#00afef" Offset="0.75"/>
                    <GradientStop Color="#f58735" Offset="0.20"/>
