<Window x:Class="AppGestionAgenceVoyage.ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppGestionAgenceVoyage"
        mc:Ignorable="d"
        Title="TravelAgency Application" Height="600" Width="1200" Icon="D:\Images\TroisLignes_1.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2">

            <StackPanel Orientation="Vertical">
                <Label Grid.Column="1"
                   Height="50"
                   Width="170"
                   Content="Travel Agency" 
                   FontFamily="Saira condensed bold"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="#f58735"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" Margin="0,-10,0,0"/>

                <Label Grid.Row="1"
                   Grid.Column="1"
                   Height="30"
                   Width="150"
                   Content=" F o r  b e t t e r  v a c a t i o n" 
                   FontFamily="Saira Condensed Bold"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="#00afef"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="0,-16,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="Hallo" Width="200"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
            <Label Background="DarkBlue"/>
        </StackPanel>

    </Grid>
</Window>
